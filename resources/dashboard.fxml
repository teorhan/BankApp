<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="DashboardController"
      prefHeight="531.0" prefWidth="800.0"
      spacing="40"
      style="-fx-background-color: #1B5E20;"
      alignment="CENTER">

    <!-- SOL TARAF: Hesap işlemleri -->
    <VBox spacing="20" alignment="CENTER">
        <padding>
            <Insets top="30" bottom="30" left="40" right="20" />
        </padding>

        <Label style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold;" text="FidanBank Hesabım" />

        <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Mevcut Bakiyeniz:" />

        <Label fx:id="balanceLabel"
               style="-fx-font-size: 24px; -fx-text-fill: #C8E6C9; -fx-font-weight: bold;"
               text="₺0" />

        <TextField fx:id="amountField"
                   promptText="Tutar girin (₺)"
                   style="-fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 14px;"
                   maxWidth="200" />

        <HBox alignment="CENTER" spacing="20">
            <Button text="Para Yatır" onAction="#handleDeposit"
                    style="-fx-background-color: white; -fx-text-fill: #1B5E20; -fx-font-size: 14px; -fx-background-radius: 10;" />
            <Button text="Para Çek" onAction="#handleWithdraw"
                    style="-fx-background-color: white; -fx-text-fill: #1B5E20; -fx-font-size: 14px; -fx-background-radius: 10;" />
        </HBox>

        <Button text="Çıkış Yap" onAction="#handleLogout"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-underline: true; -fx-font-size: 14px;" />
    </VBox>

    <!-- SAĞ TARAF: Başka hesaba gönderim -->
    <VBox spacing="20" alignment="CENTER">
        <padding>
            <Insets top="30" bottom="30" left="20" right="40" />
        </padding>

        <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" text="Para Gönder" />

        <TextField fx:id="targetTcField"
                   promptText="Alıcı TC"
                   style="-fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 14px;"
                   maxWidth="200" />

        <TextField fx:id="transferAmountField"
                   promptText="Gönderilecek Tutar (₺)"
                   style="-fx-background-radius: 10; -fx-padding: 8; -fx-font-size: 14px;"
                   maxWidth="200" />

        <Button text="Gönder"
                onAction="#handleTransfer"
                style="-fx-background-color: white; -fx-text-fill: #1B5E20; -fx-font-size: 14px; -fx-background-radius: 10;" />

        <Label fx:id="transferInfoLabel"
               style="-fx-text-fill: #C8E6C9;" />
    </VBox>

</HBox>
