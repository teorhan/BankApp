<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="AdminController"
            prefWidth="400" prefHeight="300">

    <!-- Başlık -->
    <Label layoutX="110" layoutY="20" text="FidanBank Admin Paneli" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- TC Kimlik No Giriş -->
    <TextField fx:id="targetTcField"
               layoutX="100" layoutY="80"
               promptText="Kullanıcı TC Kimlik No"
               prefWidth="200" />

    <!-- Yeni Şifre Giriş -->
    <PasswordField fx:id="newPasswordField"
                   layoutX="100" layoutY="120"
                   promptText="Yeni Şifre"
                   prefWidth="200" />

    <!-- Şifre Sıfırla Butonu -->
    <Button layoutX="100" layoutY="160"
            text="Şifre Sıfırla"
            prefWidth="90"
            onAction="#handleResetPassword" />

    <!-- Kullanıcı Sil Butonu -->
    <Button layoutX="210" layoutY="160"
            text="Kullanıcıyı Sil"
            prefWidth="90"
            onAction="#handleDeleteUser" />

    <!-- Bilgi Label -->
    <Label fx:id="infoLabel"
           layoutX="100" layoutY="210"
           textFill="green"
           prefWidth="200"
           style="-fx-font-size: 12px;" />

</AnchorPane>
